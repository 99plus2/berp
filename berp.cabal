name:                berp
version:             0.1
cabal-version:       >= 1.2
synopsis:            Berp is a compiler from Python to Haskell. 
description:         berp-compile provides the compiler, which translates Python code to Haskell code.
category:            Language
license:             BSD3
license-file:        LICENSE
copyright:           (c) 2009 Bernard James Pope
author:              Bernard James Pope 
maintainer:          bjpop@csse.unimelb.edu.au
homepage:            
build-type:          Simple
stability:           experimental
extra-source-files:  

Executable berp
  main-is:         Main.hs
  hs-source-dirs:  src, src/Berp/
  build-depends:   base, monads-tf, transformers, containers, language-python, 
                   haskell-src-exts, haskell98, parseargs, process, filepath,
                   directory, ghc, haskeline, ghc-paths, extensible-exceptions
  other-modules:
      Berp.Compile.Compile
      Berp.Compile.CompileMonad
      Berp.Compile.HsSyntaxUtils
      Berp.Compile.PySyntaxUtils
      Berp.Compile.PrimName
      Berp.Compile.Utils
      Berp.Interpreter.Input
      Berp.Interpreter.Monad
      Berp.Interpreter.Repl

Library
   include-dirs: src/include 
   hs-source-dirs:   src
   build-depends:    base, monads-tf, transformers, containers, ghc-prim, integer, template-haskell, array
   exposed-modules:
      Berp.Base
      Berp.Base.Hash
      Berp.Base.Mangle
      Berp.Version
   other-modules:
      Berp.Base.Attributes
      Berp.Base.Builtins
      Berp.Base.Builtins.Constants
      Berp.Base.Builtins.Exceptions
      Berp.Base.Builtins.Functions
      Berp.Base.Builtins.Utils
      Berp.Base.Class
      Berp.Base.ControlStack
      Berp.Base.Exception
      Berp.Base.ExitCodes
      Berp.Base.HashTable
      Berp.Base.Ident 
      Berp.Base.Identity
      Berp.Base.LiftedIO
      Berp.Base.Monad
      Berp.Base.Object
      Berp.Base.Operators
      Berp.Base.Prims
      Berp.Base.SemanticTypes
      Berp.Base.StdNames
      Berp.Base.StdTypes.Bool
      Berp.Base.StdTypes.Dictionary
      Berp.Base.StdTypes.Function
      Berp.Base.StdTypes.Generator
      Berp.Base.StdTypes.Integer
      Berp.Base.StdTypes.List
      Berp.Base.StdTypes.None
      Berp.Base.StdTypes.Object
      Berp.Base.StdTypes.ObjectBase
      Berp.Base.StdTypes.String
      Berp.Base.StdTypes.Tuple
      Berp.Base.StdTypes.Type
      Berp.Base.Truth
      Berp.Base.Unique
